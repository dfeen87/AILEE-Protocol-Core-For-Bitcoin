# AILEE-Core Environment Variables
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# Node Identity
AILEE_NODE_ID=ailee-node-1

# Environment
AILEE_ENV=production

# Logging
AILEE_LOG_LEVEL=info

# API Server
AILEE_HOST=0.0.0.0
AILEE_PORT=8080

# CORS Configuration
AILEE_CORS_ENABLED=true

# Authentication (JWT)
# Set to true to enable JWT authentication
AILEE_JWT_ENABLED=false
# CRITICAL: Generate a secure secret with: python -c "import secrets; print(secrets.token_urlsafe(64))"
# NEVER commit the actual secret to version control
# Store in environment variable or secrets manager
# AILEE_JWT_SECRET=your-secure-secret-here

# Rate Limiting
AILEE_RATE_LIMIT_ENABLED=true
AILEE_RATE_LIMIT_REQUESTS=100
AILEE_RATE_LIMIT_WINDOW=60

# Bitcoin RPC Configuration
# Primary Bitcoin RPC endpoint
BITCOIN_RPC_URL=https://localhost:8332
# CRITICAL: Never commit actual credentials
# Use secrets manager in production
# BITCOIN_RPC_USER=your-rpc-username
# BITCOIN_RPC_PASSWORD=your-rpc-password
BITCOIN_RPC_USE_TLS=true
BITCOIN_RPC_VERIFY_TLS=true
BITCOIN_RPC_TIMEOUT=30

# Failover Bitcoin RPC endpoints (optional)
# BITCOIN_RPC_FAILOVER_URLS=https://backup1.example.com:8332,https://backup2.example.com:8332
# BITCOIN_RPC_FAILOVER_USER=your-backup-rpc-username
# BITCOIN_RPC_FAILOVER_PASSWORD=your-backup-rpc-password

# TLS/SSL Configuration
AILEE_TLS_ENABLED=false
# AILEE_TLS_CERT_PATH=/etc/ailee/certs/server.crt
# AILEE_TLS_KEY_PATH=/etc/ailee/certs/server.key
# AILEE_TLS_CA_PATH=/etc/ailee/certs/ca.crt
