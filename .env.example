# AILEE-Core Environment Variables
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# Node Identity
AILEE_NODE_ID=ailee-node-1

# Environment
AILEE_ENV=production

# Logging
AILEE_LOG_LEVEL=info

# API Server
AILEE_HOST=0.0.0.0
AILEE_PORT=8080

# CORS Configuration
AILEE_CORS_ENABLED=true

# Authentication (JWT)
# Set to true to enable JWT authentication
AILEE_JWT_ENABLED=false
# Generate a secure secret: python -c "import secrets; print(secrets.token_urlsafe(32))"
AILEE_JWT_SECRET=

# Rate Limiting
AILEE_RATE_LIMIT_ENABLED=true
AILEE_RATE_LIMIT_REQUESTS=100
AILEE_RATE_LIMIT_WINDOW=60
